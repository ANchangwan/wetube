extends layouts/main
include mixins/videoBlock

block content
    .search_header
        h3 Searching by #{searchingBy}
    .sort_list 
        form(action=routes.search, method="post")
            label(for="sort_list") 정렬 : 
            select(id="sort_list")
                option(value="popularity", option=true) 인기순 정렬
                option(value="latest") 최신순 정렬   
        if videos.length === 0
            h5 No Videos Found
        each item in videos
            +videoBlock({
                title:item.title,
                views:item.views,
                videoFile:item.fileUrl,
                id:item.id
            })
